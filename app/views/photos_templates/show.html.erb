<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @the_photo.image %>" alt="">
  </dd>
  
  <dt>Caption</dt>
  <dd>
    <%= @the_photo.caption %>
  </dd>
  
  <dt>Owner</dt>
  <dd>
    <%= @the_photo.poster.username %>
  </dd>
  
  <dt>Posted</dt>
  <dd>
    <%= @the_photo.created_at %>
  </dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="">
      <label for="browser_image">
        Image
      </label>
      <input id = "browser_image" name = "input_image" type="text" placeholder = "Enter a URL for the image...">

      <label for="browser_caption">
        Caption
      </label>
      <input id = "browser_caption" name = "input_caption" type="text" placeholder = "Enter a caption for the photo...">

      <button>Update photo</button>
    </form>
  </dd>
  
  <dt>Delte photo</dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo.id %>">
      Delete this photo
    </a>
  </dd>
</dl>


<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  <% @the_photo.comments.each do |a_comment| %>
    <tr>
      <td>
        <%= a_comment.commenter.username %>
      </td>
      <td>
        <%= a_comment.body %>
      </td>
      <td>
        <%= a_comment.created_at %>
      </td>
    </tr>
  <% end %>
</table>


